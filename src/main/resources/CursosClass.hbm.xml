<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.CursosClass" table="cursos" schema="public" catalog="postgres">
        <id name="idCurso" column="id_curso"/>
        <property name="nombreCurso" column="nombre_curso"/>
        <property name="profesor" column="profesor"/>
    </class>
</hibernate-mapping>